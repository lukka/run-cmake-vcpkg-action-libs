{
    "name": "root",
    "private": true,
    "description": "Core engines for running vcpkg and CMake in continuous integration systems.",
    "author": "Luca Cappa (https://github.com/lukka)",
    "license": "MIT",
    "workspaces": [
        "packages/assets-lib",
        "packages/base-util-lib",
        "packages/base-lib",
        "packages/action-lib",
        "packages/run-vcpkg-lib",
        "packages/run-cmake-lib"
    ],
    "scripts": {
        "clean": "rm -rf ./build/",
        "build": "npx lerna run build",
        "rebuild": "npm run lint && npm run build",
        "lint": "npx lerna run lint",
        "pack": "npx lerna run pack",
        "testlerna": "npx lerna run test",
        "test": "npx jest --verbose",
        "pretest": "npx jest --clearCache",
        "version": "npx lerna version --yes",
        "publish-packages": "npx lerna publish --yes"
    },
    "devDependencies": {
        "@types/jest": "29.5.7",
        "@types/node": "20.8.9",
        "@typescript-eslint/eslint-plugin": "^6.9.0",
        "@typescript-eslint/parser": "^6.9.0",
        "eslint": "8.52.0",
        "eslint-config-standard-with-typescript": "39.1.1",
        "eslint-plugin-import": "^2.29.0",
        "eslint-plugin-jest": "^27.6.0",
        "eslint-plugin-n": "^16.2.0",
        "eslint-plugin-promise": "^6.1.1",
        "fast-glob": "^3.3.1",
        "jest": "29.7.0",
        "jest-circus": "29.7.0",
        "jest-cli": "29.7.0",
        "lerna": "^8.2.2",
        "nock": "^12.0.3",
        "nx": "^17.0.2",
        "rimraf": "^4.4.1",
        "ts-jest": "^29.1.1",
        "ts-node": "^10.9.1",
        "typescript": "^4.9.5"
    },
    "dependencies": {
        "@actions/core": "1.10.1",
        "@actions/exec": "1.1.1",
        "@actions/github": "^6.0.0",
        "@actions/glob": "0.4.0",
        "@actions/io": "1.1.3",
        "@types/adm-zip": "^0.4.32",
        "@types/follow-redirects": "^1.14.1",
        "@types/q": "^1.5.1",
        "@types/shelljs": "^0.8.6"
    }
}
